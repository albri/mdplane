{
  "name": "@mdplane/server",
  "version": "0.1.0",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun --minify",
    "start": "bun run dist/index.js",
    "test": "bun test ./src/routes/ ./src/**/__tests__/ ./tests/",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "db:generate": "bunx drizzle-kit generate",
    "db:push": "bunx drizzle-kit push",
    "db:migrate": "bunx drizzle-kit migrate",
    "test:production": "PRODUCTION_API_URL=${PRODUCTION_API_URL:-http://localhost:3001} bun run ../../e2e-production-server/run.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@mdplane/shared": "workspace:^",
    "@sinclair/typebox": "^0.34.15",
    "@types/js-yaml": "^4.0.9",
    "better-auth": "^1.4.11",
    "drizzle-orm": "^0.45.1",
    "elysia": "1.4.22",
    "express": "^5.2.1",
    "js-yaml": "^4.1.1",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/express": "^5.0.6",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.8",
    "ws": "^8.19.0"
  },
  "module": "src/index.js"
}
