{
  "name": "@mdplane/cli",
  "version": "0.1.1",
  "description": "Command-line interface for mdplane",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mdplane": "dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "README.md"
  ],
  "scripts": {
    "clean": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\"",
    "build": "pnpm run clean && tsc -p tsconfig.publish.json && bun build src/index.ts --outfile dist/index.js --target node --minify",
    "build:types": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "tsc && bun test ./src",
    "test:watch": "bun test ./src --watch",
    "pack:smoke": "node scripts/smoke-pack.mjs",
    "start": "node dist/index.js",
    "prepack": "pnpm run build"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.0.0",
    "open": "^10.1.0"
  },
  "devDependencies": {
    "@mdplane/shared": "workspace:*",
    "@types/bun": "^1.3.6",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  },
  "keywords": [
    "mdplane",
    "cli",
    "markdown",
    "ai-agents",
    "capability-urls"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albri/mdplane.git",
    "directory": "packages/cli"
  }
}
